Proceso Ejercicio_3
	
	Definir fecha, mes, año Como Entero;
	
	Escribir "Ingresar N° de día: ";
	Leer fecha;
	Escribir "Ingresar N° de mes: ";
	Leer mes;
	Escribir "Ingresar año: ";
	Leer año;
	
	Segun mes hacer
		1:
			si (fecha<=31) Entonces
				Escribir "Fecha correcta " fecha "/" mes "/" año
